# https://gethomepage.dev/widgets/info/resources/
- Hardware:
    - M1:
        icon: proxmox.png
        href: https://m1.{{ global_domain }}:8006/
        description: 'Proxmox Server: M1'
        siteMonitor: https://m1.{{ global_domain }}:8006/
        widget:
          type: proxmox
          url: https://m1.{{ global_domain }}:8006
          username: {{ homepage_proxmox_user }}
          password: {{ homepage_proxmox_secret }}
          node: macmini1
    - M2:
        icon: proxmox.png
        href: https://m2.{{ global_domain }}:8006/
        description: 'Proxmox Server: M2'
        siteMonitor: https://m2.{{ global_domain }}:8006/
        widget:
          type: proxmox
          url: https://m2.{{ global_domain }}:8006
          username: {{ homepage_proxmox_user }}
          password: {{ homepage_proxmox_secret }}
          node: macmini2
    - M3:
        icon: proxmox.png
        href: https://m3.{{ global_domain }}:8006/
        description: 'Proxmox Server: M3'
        siteMonitor: https://m3.{{ global_domain }}:8006/
        widget:
          type: proxmox
          url: https://m3.{{ global_domain }}:8006
          username: {{ homepage_proxmox_user }}
          password: {{ homepage_proxmox_secret }}
          node: macmini3
    - DS1:
        icon: synology.png
        href: http://ds1.{{ global_domain }}:5000/
        description: NAS Server
        siteMonitor: http://ds1.{{ global_domain }}:5000/
        widget:
          type: diskstation
          url: http://ds1.{{ global_domain }}:5000
          username: {{ homepage_synology_username }}
          password: {{ homepage_synology_password }}
- System:
  - Network:
      - Traefik:
          icon: traefik.png
          href: https://traefik-apps-lxc.{{ global_domain }}/
          description: Proxy Server (apps-lxc)
          server: apps-local-docker
          container: traefik
          widget:
            type: traefik
            url: https://traefik-apps-lxc.{{ global_domain }}
      - Portainer:
          icon: portainer.png
          href: https://portainer-apps-lxc.{{ global_domain }}/
          description: Container Manager (apps-lxc)
          server: apps-local-docker
          container: portainer
          widget:
            type: portainer
            url: https://portainer-apps-lxc.{{ global_domain }}
            env: 3
            key: {{ homepage_portainer_token }}
      - Speedtest Tracker:
          icon: speedtest-tracker.png
          href: https://speedtest-tracker.{{ global_domain }}/
          description: Monitor Internet Speed Over Time (apps-lxc)
          server: apps-local-docker
          container: speedtest-tracker
          widget:
            type: speedtest
            url: https://speedtest-tracker.{{ global_domain }}
            bitratePrecision: 3
  - Monitoring:
      - Pulse:
          icon: pulse.png
          href: https://pulse.{{ global_domain }}/
          description: "Monitor Proxmox/Docker/Hosts (Server: rpi1)"
          server: rpi1-docker
          container: pulse
      - Dozzle Server:
          icon: dozzle.png
          href: https://dozzle.{{ global_domain }}/
          description: "Monitor Docker Logs (Server: app-lxc)"
          server: apps-local-docker
          container: dozzle
      - Wakapi:
          icon: wakapi.png
          href: https://wakapi.{{ global_domain }}/summary
          description: Monitor developement work Over Time (apps-lxc)
          server: apps-local-docker
          container: wakapi
