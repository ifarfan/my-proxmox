          siteMonitor: https://it-tools.{{ global_domain }}/
      - Networking-Toolbox:
          icon: networking-toolbox.png
          href: https://networking-toolbox.{{ global_domain }}/
          description: Sysadmin networking tools (apps-lxc)
          siteMonitor: https://networking-toolbox.{{ global_domain }}/
      - Termix:
          icon: termix.png
          href: https://termix.{{ global_domain }}/
          description: SSH terminal server (apps-lxc)
          siteMonitor: https://termix.{{ global_domain }}/
      - Booklore:
          icon: book-lore.png
