# For configuration options and examples, please see:
# https://gethomepage.dev/widgets/info/resources/
-
  Hardware:
    -
      M1:
        icon: proxmox.png
        href: https://m1.{{ global_domain }}:8006/
        description: 'Proxmox Server: M1'
        siteMonitor: https://m1.{{ global_domain }}:8006/
        widget:
          type: proxmox
          url: https://m1.{{ global_domain }}:8006
          username: {{ homepage_proxmox_user }}
          password: {{ homepage_proxmox_secret }}
          node: macmini1
    -
      M2:
        icon: proxmox.png
        href: https://m2.{{ global_domain }}:8006/
        description: 'Proxmox Server: M2'
        siteMonitor: https://m2.{{ global_domain }}:8006/
        widget:
          type: proxmox
          url: https://m2.{{ global_domain }}:8006
          username: {{ homepage_proxmox_user }}
          password: {{ homepage_proxmox_secret }}
          node: macmini2
    -
      M3:
        icon: proxmox.png
        href: https://m3.{{ global_domain }}:8006/
        description: 'Proxmox Server: M3'
        siteMonitor: https://m3.{{ global_domain }}:8006/
        widget:
          type: proxmox
          url: https://m3.{{ global_domain }}:8006
          username: {{ homepage_proxmox_user }}
          password: {{ homepage_proxmox_secret }}
          node: macmini3
    -
      DS1:
        icon: synology.png
        href: http://ds1.{{ global_domain }}:5000/
        description: NAS Server
        siteMonitor: http://ds1.{{ global_domain }}:5000/
        widget:
          type: diskstation
          url: http://ds1.{{ global_domain }}:5000
          username: {{ homepage_synology_username }}
          password: {{ homepage_synology_password }}
-
  System Apps:
    -
      Traefik:
        icon: traefik.png
        href: https://traefik-apps-lxc.{{ global_domain }}/
        description: Proxy Server (apps-lxc)
        server: apps-local-docker
        container: traefik
        widget:
          type: traefik
          url: https://traefik-apps-lxc.{{ global_domain }}
    -
      Portainer:
        icon: portainer.png
        href: https://portainer-apps-lxc.{{ global_domain }}/
        description: Container Manager (apps-lxc)
        server: apps-local-docker
        container: portainer
        widget:
          type: portainer
          url: https://portainer-apps-lxc.{{ global_domain }}
          env: 3
          key: {{ homepage_portainer_token }}
-
  Monitoring:
    -
      Dozzle Server:
        icon: dozzle.png
        href: https://dozzle.{{ global_domain }}/
        description: "Monitor Docker Logs (Server: app-lxc)"
        server: apps-local-docker
        container: dozzle
    -
      Dozzle Agent:
        icon: dozzle.png
        description: Agent (tailscale-lxc)
        server: tailscale-docker
        container: dozzle-agent
    -
      Dozzle Agent:
        icon: dozzle.png
        description: Agent (devbox-lxc)
        server: devbox-docker
        container: dozzle-agent
    -
      Dozzle Agent:
        icon: dozzle.png
        description: Agent (arr-lxc)
        server: arr-docker
        container: dozzle-agent
    -
      Speedtest Tracker:
        icon: speedtest-tracker.png
        href: https://speedtest-tracker.{{ global_domain }}/
        description: Monitor Internet Speed Over Time (apps-lxc)
        server: apps-local-docker
        container: speedtest-tracker
        widget:
          type: speedtest
          url: https://speedtest-tracker.{{ global_domain }}
          bitratePrecision: 3
    -
      Glances:
        icon: glances.png
        href: https://{{ glances_username }}:{{ glances_password }}@glances.{{ global_domain }}/
        description: Monitoring Server (apps-lxc)
        server: apps-local-docker
        container: glances
    -
      Wakapi:
        icon: wakapi.png
        href: https://wakapi.{{ global_domain }}/summary
        description: Monitor developement work Over Time (apps-lxc)
        server: apps-local-docker
        container: wakapi
-
  High Seas:
    -
      Prowlarr:
        icon: prowlarr.png
        href: https://prowlarr.{{ global_domain }}/
        description: Indexer (arr-lxc)
        siteMonitor: https://prowlarr.{{ global_domain }}/login
        widget:
          type: prowlarr
          url: https://prowlarr.{{ global_domain }}
          key: {{ homepage_prowlarr_api }}
    -
      Radarr:
        icon: radarr.png
        href: https://radarr.{{ global_domain }}/
        description: Movies (arr-lxc)
        siteMonitor: https://radarr.{{ global_domain }}/login
        widget:
          type: radarr
          url: https://radarr.{{ global_domain }}
          key: {{ homepage_radarr_api }}
          enableQueue: true
    -
      Sonarr:
        icon: sonarr.png
        href: https://sonarr.{{ global_domain }}/
        description: TV (arr-lxc)
        siteMonitor: https://sonarr.{{ global_domain }}/login
        widget:
          type: sonarr
          url: https://sonarr.{{ global_domain }}
          key: {{ homepage_sonarr_api }}
          enableQueue: true
    -
      Lidarr:
        icon: lidarr.png
        href: https://lidarr.{{ global_domain }}/
        description: Music (arr-lxc)
        siteMonitor: https://lidarr.{{ global_domain }}/login
        widget:
          type: lidarr
          url: https://lidarr.{{ global_domain }}
          key: {{ homepage_lidarr_api }}
    -
      Bazarr:
        icon: bazarr.png
        href: https://bazarr.{{ global_domain }}/
        description: Subtitles (arr-lxc)
        siteMonitor: https://bazarr.{{ global_domain }}
        widget:
          type: bazarr
          url: https://bazarr.{{ global_domain }}
          key: {{ homepage_bazarr_api }}
    -
      LazyLibrarian:
        icon: lazylibrarian.png
        href: https://lazylibrarian.{{ global_domain }}/
        description: Books (arr-lxc)
        siteMonitor: https://lazylibrarian.{{ global_domain }}/authors
    -
      QbitTorrent:
        icon: qbittorrent.png
        href: https://qbittorrent.{{ global_domain }}/
        description: Torrent client (arr-lxc)
        siteMonitor: https://qbittorrent.{{ global_domain }}
        widget:
          type: qbittorrent
          url: https://qbittorrent.{{ global_domain }}/
          username: {{ homepage_qbittorrent_user }}
          password: {{ homepage_qbittorrent_password }}
          enableLeechProgress: true
          enableLeechSize: true
-
  Media Apps:
    -
      Plex:
        icon: plex.png
        href: https://plex.{{ global_domain }}/web/index.html
        description: Media Server (DS1 - NAS)
        siteMonitor: https://plex.{{ global_domain }}/web/index.html
        widget:
          type: plex
          url: https://plex.{{ global_domain }}
          key: {{ homepage_plex_token }}
-
  Internal Apps:
    -
      Termix:
        icon: termix.png
        href: https://termix.{{ global_domain }}/
        description: SSH terminal server (apps-lxc)
        server: apps-local-docker
        container: termix
    -
      Snippet-Box:
        icon: snippetbox.png
        href: https://snippet-box.{{ global_domain }}/
        description: Manage code snippets (apps-lxc)
        server: apps-local-docker
