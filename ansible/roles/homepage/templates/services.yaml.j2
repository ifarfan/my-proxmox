  - Internal Services:
      - Tailscale:
          icon: tailscale.png
          description: Tailscale Sub-router (net-lxc)
          server: net-docker
          container: tailscale
      - Cloudflare DDNS:
          icon: cloudflare.png
          description: Local DDNS (apps-lxc)
          server: net-docker
          container: cloudflare-ddns
      - Rustdesk:
          icon: rustdesk.png
          description: Remote Server (apps-lxc)
          server: net-docker
          container: hbbs
      - Atuin:
          icon: atuin.png
          description: Terminal History (apps-lxc)
          server: apps-local-docker
          container: atuin
