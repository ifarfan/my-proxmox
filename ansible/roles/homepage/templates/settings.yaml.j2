---
# Look 'n Feel
title: Homelab | Dashboard
headerStyle: clean
color: zinc
background:
  image: https://images.unsplash.com/photo-1637032482680-0f7086963a67
  blur: sm              # sm, "", md, xl... see https://tailwindcss.com/docs/backdrop-blur
  saturate: 50          # 0, 50, 100... see https://tailwindcss.com/docs/backdrop-saturate
  brightness: 50        # 0, 50, 75... see https://tailwindcss.com/docs/backdrop-brightness
  opacity: 85           # 0-100
statusStyle: "dot"

# Layout
layout:
  Hardware:
    style: row
    columns: 4
    icon: mdi-server-network
    useEqualHeights: true
  System Apps:
    style: row
    columns: 3
    icon: mdi-cog-outline
    useEqualHeights: true
  Monitoring:
    style: row
    columns: 4
    icon: mdi-eye-outline
    useEqualHeights: true
  Internal Apps:
    style: row
    columns: 3
    icon: mdi-web-check
    useEqualHeights: true
  Internal Services:
    style: row
    columns: 4
    icon: mdi-filter-cog-outline
    useEqualHeights: true
  Media Apps:
    style: row
    columns: 3
    icon: mdi-multimedia
    useEqualHeights: true
  High Seas:
    style: row
    columns: 3
    icon: mdi-pirate
    useEqualHeights: true
    initiallyCollapsed: true
  External Vendors:
    style: row
    columns: 4
    icon: mdi-web
  Financial:
    style: row
    columns: 2
    icon: mdi-finance
    useEqualHeights: true
    initiallyCollapsed: true

# Other
providers:
  finnhub: {{ homepage_finnhub_token }}
quicklaunch:
  searchDescriptions: true
  hideInternetSearch: true
  showSearchSuggestions: true
  hideVisitURL: true
  provider: google
