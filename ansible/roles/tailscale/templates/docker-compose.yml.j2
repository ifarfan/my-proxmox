---
# Update LXC to launch Tailscale w/ enough privileges, see:
# - https://github.com/portainer/portainer/issues/8478
# - https://forum.proxmox.com/threads/how-to-enable-tun-tap-in-a-lxc-container.25339/#post-126984
# - https://pve.proxmox.com/wiki/OpenVPN_in_LXC
#
# add these lines at end of /etc/pve/lxc/XXX.conf on proxmox host running LXC
# ```
# lxc.apparmor.profile: unconfined
# lxc.cap.drop:
# lxc.cgroup2.devices.allow: c 10:200 rwm
# lxc.mount.entry: /dev/net dev/net none bind,create=dir
# ```
#
# See https://tailscale.com/kb/1282/docker
# Examples: https://github.com/tailscale-dev/docker-guide-code-examples
services:
  tailscale:
    image: ghcr.io/tailscale/tailscale:latest
    container_name: tailscale
    restart: unless-stopped
    hostname: {{ inventory_hostname_short }}
    network_mode: host
    privileged: true
    cap_add:
      - NET_ADMIN
      - NET_RAW
      - SYS_MODULE
    environment:
      TS_ACCEPT_DNS: true
      TS_AUTHKEY: {{ tailscale_authkey }}
      TS_HOSTNAME: {{ inventory_hostname_short }}
      TS_ROUTES: {{ tailscale_routes }}
      TS_STATE_DIR: /var/lib/tailscale
      TS_USERSPACE: false
    volumes:
      - {{ tailscale_directory }}/data/:/var/lib/tailscale
      - {{ tailscale_directory }}/state/:/var/run/tailscale
    devices:
      - /dev/net/tun:/dev/net/tun
