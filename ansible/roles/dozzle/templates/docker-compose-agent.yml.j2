---
services:
  dozzle-agent:
    image: amir20/dozzle:{{ dozzle_image_version }}
    container_name: dozzle-agent
    restart: unless-stopped
    command: agent
    ports:
      - {{ dozzle_agent_port }}:{{ dozzle_agent_port }}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    healthcheck:
      test: [ "CMD", "/dozzle", "healthcheck" ]
      interval: 3s
      timeout: 30s
      retries: 5
      start_period: 30s
